@model SchoolDB.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<h2><i class="fas fa-trash text-danger me-2"></i>Delete Student</h2>
<div class="alert alert-danger">Are you sure you want to delete this student? This will also delete all their enrollment and sport records.</div>

<div class="card col-md-6">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Name</dt><dd class="col-sm-8">@Model.FullName</dd>
            <dt class="col-sm-4">Student #</dt><dd class="col-sm-8">@Model.StudentNumber</dd>
            <dt class="col-sm-4">Email</dt><dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4">Department</dt><dd class="col-sm-8">@(Model.Department?.Name ?? "â€”")</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="StudentId" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
