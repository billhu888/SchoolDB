@model IEnumerable<SchoolDB.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-user-graduate text-primary me-2"></i>Students</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i>Add Student</a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name or ID..." value="@ViewBag.SearchString" />
            </div>
            <div class="col-md-3">
                <select name="gradeLevel" class="form-select">
                    <option value="">All Grade Levels</option>
                    <option value="Freshman" selected="@(ViewBag.GradeLevel == "Freshman")">Freshman</option>
                    <option value="Sophomore" selected="@(ViewBag.GradeLevel == "Sophomore")">Sophomore</option>
                    <option value="Junior" selected="@(ViewBag.GradeLevel == "Junior")">Junior</option>
                    <option value="Senior" selected="@(ViewBag.GradeLevel == "Senior")">Senior</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="departmentId" class="form-select" asp-items="@ViewBag.Departments">
                    <option value="">All Departments</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100"><i class="fas fa-search me-1"></i>Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Student #</th>
                <th>Name</th>
                <th>Email</th>
                <th>Grade</th>
                <th>Department</th>
                <th>Classes</th>
                <th>Sports</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td><span class="badge bg-secondary">@s.StudentNumber</span></td>
                    <td><strong>@s.FullName</strong></td>
                    <td><small>@s.Email</small></td>
                    <td>@s.GradeLevel</td>
                    <td>@(s.Department?.Name ?? "â€”")</td>
                    <td><span class="badge bg-info">@s.Enrollments.Count</span></td>
                    <td><span class="badge bg-danger">@s.StudentSports.Count</span></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.StudentId" class="btn btn-sm btn-outline-info" title="Details"><i class="fas fa-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@s.StudentId" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@s.StudentId" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p class="text-muted small">Showing @Model.Count() students</p>
