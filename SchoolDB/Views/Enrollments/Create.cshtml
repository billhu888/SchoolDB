@model SchoolDB.Models.Enrollment
@{
    ViewData["Title"] = "New Enrollment";
}
<h2><i class="fas fa-plus text-warning me-2"></i>New Enrollment</h2>
<div class="row"><div class="col-md-6"><div class="card"><div class="card-body">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="mb-3"><label asp-for="StudentId" class="form-label">Student</label><select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId"><option value="">Select student...</option></select></div>
                    <div class="mb-3"><label asp-for="ClassId" class="form-label">Class</label><select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId"><option value="">Select class...</option></select></div>
        <div class="mb-3"><label asp-for="EnrollmentDate" class="form-label"></label><input asp-for="EnrollmentDate" class="form-control" type="date" /></div>
        <div class="mb-3"><label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select"><option>Active</option><option>Dropped</option><option>Completed</option></select></div>
        <div class="mb-3"><label asp-for="Grade" class="form-label"></label><input asp-for="Grade" class="form-control" placeholder="A, B+, etc." /></div>
        <div class="mb-3"><label asp-for="Notes" class="form-label"></label><textarea asp-for="Notes" class="form-control" rows="2"></textarea></div>
        <button type="submit" class="btn btn-warning"><i class="fas fa-save me-1"></i>Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div></div></div></div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
