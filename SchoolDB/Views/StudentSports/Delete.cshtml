@model SchoolDB.Models.StudentSport
@{
    ViewData["Title"] = "Remove Athlete";
}
<h2><i class="fas fa-trash text-danger me-2"></i>Remove Athlete</h2>
<div class="alert alert-warning">Remove this athlete from the sport?</div>
<div class="card col-md-5"><div class="card-body">
    <dl class="row">
        <dt class="col-sm-4">Student</dt><dd class="col-sm-8">@Model.Student?.FullName</dd>
        <dt class="col-sm-4">Sport</dt><dd class="col-sm-8">@Model.Sport?.Name (@Model.Sport?.Gender)</dd>
        <dt class="col-sm-4">Position</dt><dd class="col-sm-8">@(Model.Position ?? "—")</dd>
        <dt class="col-sm-4">Jersey #</dt><dd class="col-sm-8">@(Model.JerseyNumber ?? "—")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentSportId" />
        <button type="submit" class="btn btn-danger">Remove</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div></div>
