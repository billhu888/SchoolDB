@model IEnumerable<SchoolDB.Models.Class>
@{
    ViewData["Title"] = "Classes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-chalkboard-teacher text-info me-2"></i>Classes</h2>
    <a asp-action="Create" class="btn btn-info text-white"><i class="fas fa-plus me-1"></i>Add Class</a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-md-5"><input type="text" name="searchString" class="form-control" placeholder="Search by name or code..." value="@ViewBag.SearchString" /></div>
            <div class="col-md-4">
                <select name="departmentId" class="form-select" asp-items="@ViewBag.Departments"><option value="">All Departments</option></select>
            </div>
            <div class="col-md-3"><button type="submit" class="btn btn-outline-info w-100"><i class="fas fa-search me-1"></i>Filter</button></div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-info">
            <tr><th>Code</th><th>Name</th><th>Department</th><th>Instructor</th><th>Credits</th><th>Schedule</th><th>Enrolled</th><th>Actions</th></tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td><span class="badge bg-secondary">@c.ClassCode</span></td>
                    <td><strong>@c.Name</strong></td>
                    <td><small>@c.Department?.Name</small></td>
                    <td><small>@(c.Instructor ?? "—")</small></td>
                    <td>@c.CreditHours</td>
                    <td><small>@(c.Schedule ?? "—")</small></td>
                    <td><span class="badge @(c.Enrollments.Count >= c.MaxEnrollment ? "bg-danger" : "bg-success")">@c.Enrollments.Count / @c.MaxEnrollment</span></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@c.ClassId" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@c.ClassId" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-id="@c.ClassId" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
