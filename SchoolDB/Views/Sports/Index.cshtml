@model IEnumerable<SchoolDB.Models.Sport>
@{
    ViewData["Title"] = "Sports";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-trophy text-danger me-2"></i>Sports</h2>
    <a asp-action="Create" class="btn btn-danger"><i class="fas fa-plus me-1"></i>Add Sport</a>
</div>

<div class="row g-4">
    @foreach (var s in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span class="fw-bold"><i class="fas fa-trophy me-1 text-warning"></i>@s.Name</span>
                    @if (s.Gender != null) { <span class="badge bg-secondary">@s.Gender</span> }
                </div>
                <div class="card-body">
                    @if (s.Coach != null) { <p class="mb-1"><i class="fas fa-whistle me-1 text-muted"></i><small>Coach: @s.Coach</small></p> }
                    @if (s.Season != null) { <p class="mb-1"><i class="fas fa-calendar me-1 text-muted"></i><small>Season: @s.Season</small></p> }
                    <span class="badge bg-danger">@s.StudentSports.Count Athletes</span>
                    @if (s.MaxRosterSize.HasValue) { <span class="badge bg-light text-dark ms-1">Max: @s.MaxRosterSize</span> }
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@s.SportId" class="btn btn-sm btn-outline-danger">Details</a>
                    <a asp-action="Edit" asp-route-id="@s.SportId" class="btn btn-sm btn-outline-warning ms-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@s.SportId" class="btn btn-sm btn-outline-secondary ms-1">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
