@model SchoolDB.Models.Sport
@{
    ViewData["Title"] = "Delete Sport";
}
<h2><i class="fas fa-trash text-danger me-2"></i>Delete Sport</h2>
<div class="alert alert-danger">Are you sure you want to delete <strong>@Model.Name (@Model.Gender)</strong>?</div>
<div class="card col-md-5"><div class="card-body">
    <dl class="row">
        <dt class="col-sm-4">Name</dt><dd class="col-sm-8">@Model.Name</dd>
        <dt class="col-sm-4">Gender</dt><dd class="col-sm-8">@(Model.Gender ?? "—")</dd>
        <dt class="col-sm-4">Season</dt><dd class="col-sm-8">@(Model.Season ?? "—")</dd>
        <dt class="col-sm-4">Coach</dt><dd class="col-sm-8">@(Model.Coach ?? "—")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="SportId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div></div>
