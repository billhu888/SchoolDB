@model SchoolDB.Models.Sport
@{
    ViewData["Title"] = "Sport Details";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-trophy text-danger me-2"></i>@Model.Name</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.SportId" class="btn btn-warning"><i class="fas fa-edit me-1"></i>Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-1"><i class="fas fa-arrow-left me-1"></i>Back</a>
    </div>
</div>
<div class="row g-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">Sport Info</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Gender</dt><dd class="col-sm-7">@(Model.Gender ?? "—")</dd>
                    <dt class="col-sm-5">Season</dt><dd class="col-sm-7">@(Model.Season ?? "—")</dd>
                    <dt class="col-sm-5">Coach</dt><dd class="col-sm-7">@(Model.Coach ?? "—")</dd>
                    <dt class="col-sm-5">Max Roster</dt><dd class="col-sm-7">@(Model.MaxRosterSize?.ToString() ?? "—")</dd>
                    <dt class="col-sm-5">Athletes</dt><dd class="col-sm-7">@Model.StudentSports.Count</dd>
                </dl>
                <p class="mt-2 text-muted small">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">Athletes <span class="badge bg-white text-primary">@Model.StudentSports.Count</span></div>
            <div class="card-body p-0">
                @if (Model.StudentSports.Any())
                {
                    <table class="table table-sm mb-0">
                        <thead><tr><th>Name</th><th>Position</th><th>Jersey</th><th>Status</th></tr></thead>
                        <tbody>
                            @foreach (var ss in Model.StudentSports)
                            {
                                <tr>
                                    <td><a asp-controller="Students" asp-action="Details" asp-route-id="@ss.StudentId">@ss.Student?.FullName</a></td>
                                    <td>@(ss.Position ?? "—")</td>
                                    <td>@(ss.JerseyNumber ?? "—")</td>
                                    <td><span class="badge @(ss.Status == "Active" ? "bg-success" : "bg-secondary")">@ss.Status</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else { <p class="p-3 text-muted mb-0">No athletes on this team.</p> }
            </div>
        </div>
    </div>
</div>
