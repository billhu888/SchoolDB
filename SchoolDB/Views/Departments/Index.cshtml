@model IEnumerable<SchoolDB.Models.Department>
@{
    ViewData["Title"] = "Departments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-building text-success me-2"></i>Departments</h2>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus me-1"></i>Add Department</a>
</div>

<div class="row g-4">
    @foreach (var d in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span class="fw-bold">@d.Name</span>
                    @if (d.Code != null) { <span class="badge bg-success">@d.Code</span> }
                </div>
                <div class="card-body">
                    <p class="text-muted small">@(d.Description ?? "No description.")</p>
                    @if (d.DepartmentHead != null) { <p class="mb-1"><i class="fas fa-user me-1 text-muted"></i><small>@d.DepartmentHead</small></p> }
                    @if (d.OfficeLocation != null) { <p class="mb-2"><i class="fas fa-map-marker-alt me-1 text-muted"></i><small>@d.OfficeLocation</small></p> }
                    <div class="d-flex gap-2">
                        <span class="badge bg-primary">@d.Students.Count Students</span>
                        <span class="badge bg-info">@d.Classes.Count Classes</span>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@d.DepartmentId" class="btn btn-sm btn-outline-success">Details</a>
                    <a asp-action="Edit" asp-route-id="@d.DepartmentId" class="btn btn-sm btn-outline-warning ms-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@d.DepartmentId" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
