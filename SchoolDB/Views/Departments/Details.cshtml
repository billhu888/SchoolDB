@model SchoolDB.Models.Department
@{
    ViewData["Title"] = "Department Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="fas fa-building text-success me-2"></i>@Model.Name</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-warning"><i class="fas fa-edit me-1"></i>Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-1"><i class="fas fa-arrow-left me-1"></i>Back</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-success text-white">Department Info</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Code</dt><dd class="col-sm-7">@(Model.Code ?? "—")</dd>
                    <dt class="col-sm-5">Head</dt><dd class="col-sm-7">@(Model.DepartmentHead ?? "—")</dd>
                    <dt class="col-sm-5">Office</dt><dd class="col-sm-7">@(Model.OfficeLocation ?? "—")</dd>
                    <dt class="col-sm-5">Description</dt><dd class="col-sm-7">@(Model.Description ?? "—")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">Students <span class="badge bg-white text-primary">@Model.Students.Count</span></div>
            <div class="card-body p-0">
                @if (Model.Students.Any())
                {
                    <table class="table table-sm mb-0">
                        <thead><tr><th>Student #</th><th>Name</th><th>Grade</th></tr></thead>
                        <tbody>
                            @foreach (var s in Model.Students)
                            {
                                <tr>
                                    <td><a asp-controller="Students" asp-action="Details" asp-route-id="@s.StudentId">@s.StudentNumber</a></td>
                                    <td>@s.FullName</td>
                                    <td>@s.GradeLevel</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else { <p class="p-3 text-muted mb-0">No students in this department.</p> }
            </div>
        </div>
        <div class="card">
            <div class="card-header bg-info text-white">Classes <span class="badge bg-white text-info">@Model.Classes.Count</span></div>
            <div class="card-body p-0">
                @if (Model.Classes.Any())
                {
                    <table class="table table-sm mb-0">
                        <thead><tr><th>Code</th><th>Name</th><th>Credits</th><th>Instructor</th></tr></thead>
                        <tbody>
                            @foreach (var c in Model.Classes)
                            {
                                <tr>
                                    <td><a asp-controller="Classes" asp-action="Details" asp-route-id="@c.ClassId">@c.ClassCode</a></td>
                                    <td>@c.Name</td>
                                    <td>@c.CreditHours</td>
                                    <td>@(c.Instructor ?? "—")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else { <p class="p-3 text-muted mb-0">No classes in this department.</p> }
            </div>
        </div>
    </div>
</div>
